Inicio
  Caracter : Sexo;
  Real : Altura, PesoIdeal;
  Leia(Sexo, Altura);
  Se Sexo = "M" ent達o
     PesoIdeal <- (72.7 * Altura) - 58;
  Se Sexo = "m" ent達o
     PesoIdeal <- (72.7 * Altura) - 58;
  Se Sexo = "F" ent達o
     PesoIdeal <- (62.1 * Altura) - 44.7;  
  Se Sexo = "f" ent達o
     PesoIdeal <- (62.1 * Altura) - 44.7;  
  Escreva(PesoIdeal);
Fim
